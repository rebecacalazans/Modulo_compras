<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="larissa.modulocompra.qtdProduto">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Categoria"
    android:id="@+id/textView3"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:text="Ex: Frios"
    android:id="@+id/categoria"
    android:layout_below="@+id/textView3"
    android:layout_alignParentEnd="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Nome"
    android:id="@+id/textView6"
    android:layout_below="@+id/categoria"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Ex: Queijo Mussarela"
    android:textSize="20sp"
    android:id="@+id/nomeproduto"
    android:layout_below="@+id/textView6"
    android:layout_alignParentEnd="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="PreÃ§o"
    android:id="@+id/textView8"
    android:layout_below="@+id/nomeproduto"
    android:layout_alignParentStart="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0,00"
    android:textSize="20sp"
    android:id="@+id/precoproduto"
    android:layout_below="@+id/textView8"
    android:layout_alignEnd="@+id/button3" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:layout_marginTop="20dp"
    android:text="Quantidade"
    android:id="@+id/textView10"
    android:layout_below="@+id/precoproduto"
    android:layout_centerHorizontal="true" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="number"
    android:textColor="#008B8B"
    android:textSize="30sp"
    android:id="@+id/editquantidade"
    android:layout_below="@+id/textView10"
    android:layout_centerHorizontal="true" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Adicionar produto"
    android:background="#008B8B"
    android:layout_marginTop="6dp"
    android:textColor="#FFFFFF"
    android:textSize="30sp"
    android:id="@+id/button3"
    android:onClick="adicionarProduto"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentStart="true" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Cancelar"
    android:onClick="cancelar"
    android:background="#FFFFFF"
    android:layout_marginTop="6dp"
    android:textColor="#008B8B"
    android:textSize="30sp"
    android:id="@+id/button4"
    android:layout_above="@+id/button3"
    android:layout_alignParentStart="true"
    android:layout_alignEnd="@+id/button3" />
</RelativeLayout>
